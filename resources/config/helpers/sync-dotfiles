#!/usr/bin/env

# ESLint
ln -s $DOTFILES_PATH/.eslintrc $HOME/.eslintrc;
ln -s $DOTFILES_PATH/.eslintignore $HOME/.eslintignore;

# Markdownlint
ln -s $DOTFILES_PATH/.markdownlint.json $HOME/.markdownlint.json;

# PHP-CS-Fixer
ln -s $DOTFILES_PATH/.php-cs-fixer.php $HOME/.php-cs-fixer.php;

# Prettier
ln -s $DOTFILES_PATH/.prettierrc $HOME/.prettierrc;
ln -s $DOTFILES_PATH/.prettierignore $HOME/.prettierignore;

# Stylelint
ln -s $DOTFILES_PATH/.stylelintrc.json $HOME/.stylelintrc.json;

