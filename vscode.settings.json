{
	//  Core -> Editor
	//-----------------------------------
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingDelete": "never",
	"editor.autoClosingQuotes": "never",
	"editor.autoIndent": "keep",
	"editor.bracketPairColorization.enabled": true,
	"editor.codeLensFontFamily": "'cascadia code'",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"editor.cursorBlinking": "phase",
	"editor.cursorStyle": "underline",
	"editor.detectIndentation": false,
	"editor.folding": false,
	"editor.fontFamily": "'cascadia code'",
	"editor.fontLigatures": false,
	"editor.fontSize": 12,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "modificationsIfAvailable",
	"editor.formatOnType": true,
	"editor.guides.bracketPairs": "active",
	"editor.insertSpaces": false,
	"editor.minimap.enabled": false,
	"editor.minimap.renderCharacters": false,
	"editor.renderWhitespace": "all",
	"editor.tabSize": 2,
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 120,
	//  Core -> Extensions
	//-----------------------------------
	"extensions.ignoreRecommendations": true,
	//  Core -> Files
	//-----------------------------------
	"files.associations": {
		"*.json": "jsonc"
	},
	"files.exclude": {
		"**/.git": false
	},
	//  Core -> Keyboard
	//-----------------------------------
	"keyboard.touchbar.enabled": false,
	//  Core -> Security
	//-----------------------------------
	"security.workspace.trust.banner": "never",
	"security.workspace.trust.startupPrompt": "never",
	"security.workspace.trust.untrustedFiles": "open",
	//  Core -> Terminal
	//-----------------------------------
	"terminal.external.osxExec": "iTerm.app",
	"terminal.integrated.allowChords": false,
	"terminal.integrated.automationProfile.linux": {},
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "underline",
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.minimumContrastRatio": 4.5,
	//  Core -> Window
	//-----------------------------------
	"window.zoomLevel": 1,
	//  Core -> Workbench
	//-----------------------------------
	"workbench.activityBar.visible": false,
	"workbench.colorTheme": "Winter is Coming (Dark Blue)",
	"workbench.editor.closeOnFileDelete": true,
	"workbench.editor.mouseBackForwardToNavigate": false,
	"workbench.editor.showTabs": true,
	"workbench.editor.untitled.hint": "hidden",
	"workbench.iconTheme": "vscode-great-icons",
	"workbench.settings.useSplitJSON": true,
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,

	//  Extensions -> Auto-Build Marlin
	//-----------------------------------
	"auto-build.defaultEnv.name": "STM32G0B1RE_btt",
	//  Extensions -> EditorConfig
	//-----------------------------------
		"editorconfig.template": "/Users/nick/Sites/internal/dotfiles/.editorconfig",
		"editorconfig.generateAuto": false,
	//  Extensions -> ESLint
	//-----------------------------------
	"eslint.alwaysShowStatus": true,
	"eslint.format.enable": true,
	"eslint.run": "onSave",
	"eslint.enable": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"vue"
	],
	// "eslint.runtime": "/opt/homebrew/bin/eslint",
	//  Extensions -> GitLens
	//-----------------------------------
	"gitlens.currentLine.enabled": false,
	"gitlens.currentLine.pullRequests.enabled": false,
	"gitlens.currentLine.scrollable": false,
	"gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm Z ",
	"gitlens.defaultDateLocale": "en-US",
	"gitlens.defaultDateShortFormat": "YYYY-MM-DD",
	"gitlens.defaultTimeFormat": "HH:mm",
	//  Extensions -> Git
	//-----------------------------------
	"git.autofetch": true,
	"git.ignoreMissingGitWarning": true,
	//  Extensions -> Markdown Preview
	//-----------------------------------
	"markdown-preview-github-styles.colorTheme": "light",
	//  Extensions -> PHP-CS-Fixer
	//-----------------------------------
	"php-cs-fixer.executablePath": "/Users/nick/.composer/vendor/bin/php-cs-fixer",
	"php-cs-fixer.onsave": true,
	"php-cs-fixer.config": "/Users/nick/Sites/internal/dotfiles/.php-cs-fixer.php",
	"php-cs-fixer.allowRisky": true,
	"php-cs-fixer.pathMode": "override",
	"php-cs-fixer.autoFixByBracket": false,
	"php-cs-fixer.autoFixBySemicolon": false,
	"php-cs-fixer.formatHtml": false,
	"php-cs-fixer.documentFormattingProvider": true,
	//  Extensions -> RedHat
	//-----------------------------------
	"redhat.telemetry.enabled": false,
	//  Extensions -> Stylelint
	//-----------------------------------
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"stylelint.validate": [
		"css",
		"scss",
		"postcss"
	],
	"stylelint.configFile": "/Users/nick/Sites/internal/dotfiles/.stylelintrc.json",
	//  Languages -> CSS
	//-----------------------------------
	"[css]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.stylelint": true,
			"source.fixAll.eslint": false
		},
		"editor.defaultFormatter": "stylelint.vscode-stylelint"
	},
	//  Languages -> PostCSS
	//-----------------------------------
	"[pcss]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.stylelint": true,
			"source.fixAll.eslint": false
		},
		"editor.defaultFormatter": "stylelint.vscode-stylelint"
	},
	//  Languages -> Sass
	//-----------------------------------
	"[sass]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.stylelint": true,
			"source.fixAll.eslint": false
		},
		"editor.defaultFormatter": "stylelint.vscode-stylelint"
	},
	//  Languages -> SCSS
	//-----------------------------------
	"[scss]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.stylelint": true,
			"source.fixAll.eslint": false
	},
	"editor.defaultFormatter": "stylelint.vscode-stylelint"
	},
	"[php]": {
		"editor.defaultFormatter": "junstyle.php-cs-fixer"
	}
}
