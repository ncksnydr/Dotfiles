{
	//  Core -> Editor
	//-----------------------------------
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingDelete": "never",
	"editor.autoClosingQuotes": "never",
	"editor.autoIndent": "keep",
	"editor.bracketPairColorization.enabled": true,
	"editor.codeLensFontFamily": "'cascadia code'",
	"editor.cursorBlinking": "phase",
	"editor.cursorStyle": "underline",
	"editor.detectIndentation": false,
	"editor.folding": false,
	"editor.fontFamily": "'cascadia code'",
	"editor.fontLigatures": false,
	"editor.fontSize": 12,
	"editor.formatOnPaste": false,
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "modificationsIfAvailable",
	"editor.formatOnType": true,
	"editor.guides.bracketPairs": "active",
	"editor.insertSpaces": false,
	"editor.minimap.enabled": false,
	"editor.minimap.renderCharacters": false,
	"editor.renderWhitespace": "all",
	"editor.tabSize": 2,
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 120,
	//  Core -> Extensions
	//-----------------------------------
	"extensions.ignoreRecommendations": true,
	//  Core -> Files
	//-----------------------------------
	"files.associations": {
		"*.json": "jsonc"
	},
	"files.exclude": {
		"**/.git": false
	},
	//  Core -> Keyboard
	//-----------------------------------
	"keyboard.touchbar.enabled": false,
	//  Core -> Security
	//-----------------------------------
	"security.workspace.trust.banner": "never",
	"security.workspace.trust.startupPrompt": "never",
	"security.workspace.trust.untrustedFiles": "open",
	//  Core -> Terminal
	//-----------------------------------
	"terminal.external.osxExec": "iTerm.app",
	"terminal.integrated.allowChords": false,
	"terminal.integrated.automationProfile.linux": {},
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "underline",
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.minimumContrastRatio": 4.5,
	//  Core -> Window
	//-----------------------------------
	"window.zoomLevel": 1,
	//  Core -> Workbench
	//-----------------------------------
	"workbench.activityBar.visible": false,
	"workbench.colorTheme": "Winter is Coming (Dark Blue)",
	"workbench.editor.closeOnFileDelete": true,
	"workbench.editor.mouseBackForwardToNavigate": false,
	"workbench.editor.showTabs": true,
	"workbench.iconTheme": "vscode-great-icons",
	"workbench.settings.useSplitJSON": true,
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	//  Extensions -> Auto-Build Marlin
	//-----------------------------------
	"auto-build.defaultEnv.name": "STM32G0B1RE_btt",
	//  Extensions -> EditorConfig
	//-----------------------------------
	// "editorconfig.generateAuto": false,
	// "editorconfig.template": "/Users/nick/Sites/internal/dotfiles/.editorconfig",
	//  Extensions -> ESLint
	//-----------------------------------
	"eslint.format.enable": true,
	"eslint.enable": true,
	"eslint.validate": [
		"javascript",
		"vue"
	],
	//  Extensions -> GitLens
	//-----------------------------------
	"gitlens.defaultDateLocale": "en-US",
	"gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm Z ",
	"gitlens.defaultDateShortFormat": "YYYY-MM-DD",
	"gitlens.defaultTimeFormat": "HH:mm",
	//  Extensions -> Git
	//-----------------------------------
	"git.autofetch": true,
	"git.ignoreMissingGitWarning": true,
	//  Extensions -> RedHat
	//-----------------------------------
	"redhat.telemetry.enabled": false,
	"editorconfig.template": "~/.editorconfig",
	"editorconfig.generateAuto": false,
	"gitlens.currentLine.enabled": false,
	"gitlens.currentLine.scrollable": false,
	"gitlens.currentLine.pullRequests.enabled": false,
	"eslint.alwaysShowStatus": true,
	"eslint.debug": true,
	"eslint.lintTask.enable": true,
	"eslint.probe": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"html",
		"vue"
	],
	"eslint.run": "onSave",
	"[javascript]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"markdown-preview-github-styles.colorTheme": "light",
	"workbench.editor.untitled.hint": "hidden"
}
