{
    //  Core -> Editor
    //-----------------------------------
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.autoIndent": "keep",
    "editor.bracketPairColorization.enabled": true,
    "editor.codeLensFontFamily": "'caskaydiacove nf'",
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "underline",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.detectIndentation": false,
    "editor.folding": false,
    "editor.fontFamily": "'caskaydiacove nf'",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.guides.bracketPairs": "active",
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.renderWhitespace": "all",
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 120,

    //  Core -> Extensions
    //-----------------------------------
    "extensions.ignoreRecommendations": true,

    //  Core -> Files
    //-----------------------------------
    "files.associations": {
        "*.json": "jsonc"
    },
    "files.exclude": {
        "**/.git": false
    },

    //  Core -> Keyboard
    //-----------------------------------
    "keyboard.touchbar.enabled": false,

    //  Core -> Security
    //-----------------------------------
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.untrustedFiles": "open",

    //  Core -> Terminal
    //-----------------------------------
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.automationProfile.linux": {},
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.minimumContrastRatio": 4.5,

    //  Core -> Window
    //-----------------------------------
    "window.zoomLevel": 1,

    //  Core -> Workbench
    //-----------------------------------
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Winter is Coming (Dark Blue)",
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.mouseBackForwardToNavigate": false,
    "workbench.editor.showTabs": true,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.settings.useSplitJSON": true,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,

    //  Extensions -> Auto-Build Marlin
    //-----------------------------------
    "auto-build.defaultEnv.name": "STM32G0B1RE_btt",

    //  Extensions -> ESLint
    //-----------------------------------
    "eslint.format.enable": true,
    "eslint.ignoreUntitled": true,
    "eslint.packageManager": "npm",
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
    ],
    "eslint.run": "onSave",
    "eslint.validate": ["javascript", "javascriptreact", "vue"],

    //  Extensions -> Git
    //-----------------------------------
    "git.autofetch": true,
    "git.ignoreMissingGitWarning": true,
    "git.openRepositoryInParentFolders": "always",

    //  Extensions -> Markdownlint
    //-----------------------------------

    //  Extensions -> Markdown Preview
    //-----------------------------------
    "markdown-preview-github-styles.colorTheme": "light",

    //  Extensions -> PHP-CS-Fixer
    //-----------------------------------
    "php-cs-fixer.allowRisky": true,
    "php-cs-fixer.executablePath": "/Users/nick/.composer/vendor/bin/php-cs-fixer",
    "php-cs-fixer.ignorePHPVersion": true,
    "php-cs-fixer.onsave": true,

    //  Extensions -> Prettier
    //-----------------------------------
    "prettier.useEditorConfig": false,

    //  Extensions -> RedHat
    //-----------------------------------
    "redhat.telemetry.enabled": false,
    "C_Cpp.default.customConfigurationVariables": {},

    //  Extensions -> Stylelint
    //-----------------------------------
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,

    //  Language -> CSS
    //-----------------------------------
    "[css]": {
        "html.validate.styles": false,
        "editor.defaultFormatter": "stylelint.vscode-stylelint",
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": true
        }
    },

    //  Language -> Markdown
    //-----------------------------------
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.markdownlint": true
        },
        "editor.wordWrap": "off"
    },

    //  Language -> PHP
    //-----------------------------------
    "[blade][php]": {
        "editor.defaultFormatter": "junstyle.php-cs-fixer"
    },

    //  Language -> JavaScript/Vue
    //-----------------------------------
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "javascript.updateImportsOnFileMove.enabled": "always"
    },
    "window.restoreWindows": "none",
    "window.openFoldersInNewWindow": "on",
    "window.openFilesInNewWindow": "on",
    "typescript.updateImportsOnFileMove.enabled": "always"
}
