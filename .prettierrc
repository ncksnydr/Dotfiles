{
  "arrowParens": "always",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "jsxSingleQuote": true,
  "parser": "scss",
  "quoteProps": "consistent",
  "singleAttributePerLine": true,
  "useTabs": true,
  "vueIndentScriptAndStyle": true,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "none",
	"plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["*.css"],
      "options": {
        "parser": "css",
        "order": "alphabetical"
      }
    },
    {
      "files": ["*.scss"],
      "options": {
        "parser": "scss",
        "order": "alphabetical"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.json", "*.jsonc"],
      "options": {
        "bracketSameLine": true,
        "bracketSpacing": true,
        "endOfLine": "lf",
        "useTabs": false,
        "semi": false,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "none",
        "parser": "json"
      }
    },
    {
      "files": ["*.py"],
      "options": {
        "bracketSameLine": true,
        "bracketSpacing": true,
        "endOfLine": "lf",
        "useTabs": false,
        "semi": false,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "parser": "yaml"
      }
    }
  ]
}
